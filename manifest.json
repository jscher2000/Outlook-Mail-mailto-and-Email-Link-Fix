{
	"manifest_version": 2,
	"name": "Outlook Mail - mailto and Email Link Fix",
	"description": "Right-click an email link to compose a new message in Outlook.com webmail. Pop-out style new tab needs to be closed after sending or discarding your message. Not an official Microsoft add-on.",
	"version": "0.7",
	"applications":{
		"gecko": {
			"id": "{8e058153-ee66-4c9b-ab87-ff930d606e74}",
			"strict_min_version": "60.0"
		}
	},
	"developer": {
		"name": "Jefferson \"jscher2000\" Scher",
		"url": "https://github.com/jscher2000/"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"permissions": [
		"menus",
		"activeTab",
		"storage"
	],
	"icons": {
		"16": "icons/mailto-outlook-16.png",
		"32": "icons/mailto-outlook-32.png",
		"64": "icons/mailto-outlook-64.png"
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	}
}
